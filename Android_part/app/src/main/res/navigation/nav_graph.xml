<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="hu.bme.aut.android.app_frontend.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_startMenuFragment"
            app:destination="@id/startMenuActivity" />
        <action
            android:id="@+id/action_loginFragment_to_password_send"
            app:destination="@id/password_send" />
        <action
            android:id="@+id/action_loginFragment_to_registration"
            app:destination="@id/registration" />
    </fragment>
    <activity
        android:id="@+id/startMenuActivity"
        android:name="hu.bme.aut.android.app_frontend.StartMenuActivity"
        android:label="fragment_start_menu"
        tools:layout="@layout/activity_start_menu" >
        <action
            android:id="@+id/action_startMenuFragment_to_placesOfInterestActivity"
            app:destination="@id/placesOfInterestActivity" />
        <action
            android:id="@+id/action_startMenuFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </activity>

    <activity
        android:id="@+id/placesOfInterestActivity"
        android:name="hu.bme.aut.android.app_frontend.PlacesOfInterestActivity"
        android:label="fragment_places_of_interest"
        tools:layout="@layout/activity_places_of_interest" >
        <action
            android:id="@+id/action_placesOfInterestActivity_to_startMenuActivity"
            app:destination="@id/startMenuActivity" />
    </activity>

    <fragment
        android:id="@+id/password_send"
        android:name="hu.bme.aut.android.app_frontend.ForgotPassword"
        android:label="fragment_password_send"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_password_send_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="hu.bme.aut.android.app_frontend.Registration"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registration_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>